<%= form_with model: @answer, local: true do |form| %>

  <% if @answer.errors.any? %>
    <div>
      <h3>
        <%= pluralize(@answer.errors.count, "error") %> prohibited
        this article from being saved:
      </h3>
      <ul>
        <% @answer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% elsif @save_success === 'Y' %>
    <div>
       <h3>Save Successful!</h3>
      </div>
    <% @save_success = '' %>
  <% end %>


  <p>
    <%= form.label :body %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.hidden_field :username, :value => current_user.username %>
    <%= form.submit %>
  </p>
<% end %>